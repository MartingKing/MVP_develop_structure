<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dip10"
    android:layout_marginRight="@dimen/dip10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dip228"
            android:layout_height="@dimen/dip128"
            android:src="@mipmap/banner1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip15"
            android:text="城步苗族自治县大新闻分开倒萨范德萨"
            android:textColor="@color/color333"
            android:textSize="@dimen/sip26" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="城步广电总局|1小时前"
            android:textColor="@color/color999" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/ic_eyes"
            android:drawablePadding="@dimen/dip3"
            android:gravity="center"
            android:text="1024"
            android:textColor="@color/color999" />
    </RelativeLayout>

    <View style="@style/common_divider_style" />
</LinearLayout>
