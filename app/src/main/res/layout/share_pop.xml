<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip244"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_weixin_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dip60"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/dip120"
                android:layout_height="@dimen/dip120"
                android:background="@drawable/shape_qr_dialog">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/icon_wechat" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dip18"
                android:text="微信好友"
                android:textColor="@color/color999"
                android:textSize="@dimen/sip20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wexin_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dip50"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/dip120"
                android:layout_height="@dimen/dip120"
                android:background="@drawable/shape_qr_dialog">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/icon_moments" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dip18"
                android:text="微信朋友圈"
                android:textColor="@color/color999"
                android:textSize="@dimen/sip20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_qq_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dip50"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/dip120"
                android:layout_height="@dimen/dip120"
                android:background="@drawable/shape_qr_dialog">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/icon_qq" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dip18"
                android:text="QQ好友"
                android:textColor="@color/color999"
                android:textSize="@dimen/sip20" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/common_divider_style" />

    <TextView
        android:id="@+id/tv_dismiss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip100"
        android:gravity="center"
        android:text="@string/lib_cancel"
        android:textColor="@color/color999" />
</LinearLayout>